# PLAYAUTO Backend 환경변수 설정 예제
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# 데이터베이스 설정 (필수)
DATABASE_URL=postgresql://username:password@host:port/database_name

# 보안 설정 (필수)
SECRET_KEY=your-secret-key-here-change-this-in-production

# 이메일 설정 (선택)
# 이메일 알림을 사용하려면 아래 설정을 구성하세요

# 이메일 발송 활성화 (기본값: False)
EMAIL_ENABLED=True

# SMTP 서버 설정
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# 발신자 정보
EMAIL_FROM=ai@biocom.kr
EMAIL_FROM_NAME=PLAYAUTO 시스템

# Gmail 인증 정보
# Gmail 앱 비밀번호를 생성하여 사용하세요
# 1. Google 계정 설정 > 보안 > 2단계 인증 활성화
# 2. 앱 비밀번호 생성 (https://myaccount.google.com/apppasswords)
EMAIL_USERNAME=ai@biocom.kr
EMAIL_PASSWORD=your-gmail-app-password-here

# 프론트엔드 URL (CORS 설정용)
FRONTEND_URL=http://localhost:3001

# 서버 설정
HOST=0.0.0.0
PORT=8000

# 디버그 모드
DEBUG=True

# 백업 설정 (선택)
# 백업 디렉토리 (기본값: ./backups)
BACKUP_DIR=./backups

# 백업 보관 기간 (기본값: 30일)
BACKUP_RETENTION_DAYS=30

# 백업 압축 여부 (기본값: true)
BACKUP_COMPRESSION=true

# 백업 포맷: custom, plain, tar (기본값: custom)
BACKUP_FORMAT=custom

# 백업 시 이메일 알림 (기본값: false)
BACKUP_EMAIL_ALERTS=false
BACKUP_ALERT_EMAIL=admin@playauto.com

# S3 백업 설정 (선택)
S3_BACKUP_ENABLED=false
S3_BACKUP_BUCKET=playauto-backups
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BACKUP_PREFIX=playauto-backups